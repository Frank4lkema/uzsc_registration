<div class="container font-size-30">
	<div class="row">
		<div class="col-sm-6 offset-sm-3 margin-tp-300" id="login-box">
			<h2><i class="fa fa-sign-in"> </i> Wijzig profiel</h2>
			<hr />

			<%= simple_form_for @user, url: user_path(@user), method: :patch do |f| %>
				<div class="form-inputs">
					<%= f.label :email, 'E-mail:' %>
					<%= f.input :email, required: true, label: false %>
					<%= f.input :name, required:true %>
					<% if current_user.admin_user?%>
						<%= f.input :team, collection: TEAMS, required:true %>
					<% end %>
					<% if current_user == @user %>
						<%= f.label :password, 'Wachtwoord:' %>
						<%= f.input :password, required: true, label: false%>
					<% end %>
				</div>

				<div id="" class="training-card-button green-button">
					<%= f.button :submit, "Wijzig Profiel", class: "text-white" %>
				</div>
			<% end %>
		</div>
	</div>
</div>