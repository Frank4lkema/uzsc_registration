.conformation-grid{
	background-color: #616a6f;
	height: 100%;
	display:grid;
	grid-template-rows: 1fr 1fr 1fr 1fr 1fr;
}

.conformation-box{
	grid-row:3/6;

	margin-right: 15px;
	margin-left:15px;
	border-radius: 15px;
	box-shadow: 0 0 20px 0 rgba(0, 0, 0, 0.1);
	background-color: #ffffff;


	display:grid;
	grid-template-rows: 1fr 1fr 1fr 1fr 1fr 1fr 1fr;
}