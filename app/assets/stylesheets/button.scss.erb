#btn {
	background: #b60000;
	height: 50px;
	min-width: 150px;
	border: none;
	border-radius: 10px;
	color: #eee;
	font-size: 40px;
	font-family: 'Cookie', cursive;
	position: relative;
	transition: 1s;
	-webkit-tap-highlight-color: transparent;
	display: flex;
	align-items: center;
	justify-content: center;
	cursor: pointer;
	padding-top: 5px;
}

#btn #circle {
	width: 5px;
	height: 5px;
	background: transparent;
	border-radius: 50%;
	position: absolute;
	top: 0;
	left: 50%;
	overflow: hidden;
	transition: 500ms;
}
a {
	color: #eee;
	text-decoration: none;
}
a:hover
{
	color:#eee;
	text-decoration:none;
	cursor:pointer;
}


.green-button{
	width: 100%;
	border-radius: 5px;
	background-color: #68c751;
	color: white;
	font-size: 50px !important;
}

.white-button{
	width: 100%;
	border-radius: 5px;
	background-color: #68c751;
	color: white;
	border: solid 1px #ffffff;
	font-size: 50px !important;
}

.grey-button{
	width: 100%;
	border-radius: 5px;
	background-color: #cfd8dd;
	color: white;
	border: solid 1px #cfd8dd;
	font-size: 50px !important;
}