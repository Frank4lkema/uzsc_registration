h3 {
	margin: 10px 0;
}

h6 {
	margin: 5px 0;
	text-transform: uppercase;
}

p {
	font-size: 14px;
	line-height: 21px;
}

.card-container {
	background-color: #b60000;
	border-radius: 5px;
	box-shadow: 0px 10px 20px -10px rgba(0,0,0,0.75);
	color: #fff;
	padding-top: 30px;
	margin-left: 30px;
	margin-right: 30px;
	position: relative;

	max-width: 100%;
	text-align: center;
}

button.primary {
	background-color: #eee;
	border: 1px solid #eee;
	border-radius: 3px;
	color: #b60000;
	font-family: Montserrat, sans-serif;
	font-weight: 500;
	padding: 10px 25px;
	width: 45%;
}
button.primary a{
	color: #b60000;
}
button.primary.ghost  a{
	color: #eee;
}
button.primary.ghost {
	background-color: transparent;
	color: #eee;
}

.skills {
	background-color: #eee;
	text-align: left;
	padding: 15px;
	margin-top: 30px;
}

.skills h6 {
	color: #222;
}

.skills ul {
	list-style-type: none;
	margin: 0;
	padding: 0;
	color: #222;
}

.skills ul li {
	border: 1px solid #2D2747;
	border-radius: 2px;
	display: inline-block;
	font-size: 12px;
	margin: 0 7px 7px 0;
	padding: 7px;
	color: #222;
}
