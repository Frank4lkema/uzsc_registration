.wrapper {
	height: 370px;
	width: 654px;
	margin: 50px auto;
	border-radius: 7px 7px 7px 7px;
	/* VIA CSS MATIC https://goo.gl/cIbnS */
	-webkit-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
	-moz-box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
	box-shadow: 0px 14px 32px 0px rgba(0, 0, 0, 0.15);
	background: #0cebeb;  /* fallback for old browsers */
	background: -webkit-linear-gradient(45deg, #29ffc6, #20e3b2, #0cebeb);  /* Chrome 10-25, Safari 5.1-6 */
	background: linear-gradient(45deg, #29ffc6, #20e3b2, #0cebeb); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */

}

.product-img {
	float: left;
	height: 420px;
	width: 327px;
	position: relative;
}

.product-img img {

}

.product-info {
	float: left;
	height: 420px;
	width: 327px;
	border-radius: 0 7px 10px 7px;
}

.product-text {
	height: 150px;
	width: 327px;
}

.product-text h1 {
	margin: 0 0 0 38px;
	padding-top: 50px;
	padding-right: 10px;
	font-size: 25px;
	color: #ffffff;
}

.product-text h1,
.product-price-btn p {
	font-family: 'Bentham', serif;
}

.product-text h2 {
	margin: 10px 0 47px 38px;
	font-size: 15px;
	font-family: 'Raleway', sans-serif;
	font-weight: 400;
	text-transform: uppercase;
	color: #ffffff;
	letter-spacing: 0.1em;
}

.product-text p {
	height: 125px;
	margin: 0 0 0 38px;
	font-family: 'Playfair Display', serif;
	color: #ffffff;
	line-height: 1.7em;
	font-size: 30px;
	font-weight: lighter;
	overflow: hidden;
}

.product-price-btn {
	height: 103px;
	width: 327px;
	margin-top: 17px;
	position: relative;
}

.product-price-btn p {
	display: inline-block;
	position: absolute;
	top: -13px;
	height: 50px;
	font-family: 'Trocchi', serif;
	margin: 0 0 0 38px;
	font-size: 28px;
	font-weight: lighter;
	color: #ffffff;
}

span {
	display: inline-block;
	height: 50px;
	font-family: 'Suranna', serif;
	font-size: 34px;
}

.product-price-btn button {
	float: right;
	display: inline-block;
	height: 50px;
	width: 176px;
	margin: 0 40px 0 16px;
	box-sizing: border-box;
	border: transparent;
	border-radius: 60px;
	font-family: 'Raleway', sans-serif;
	font-size: 35px;
	font-weight: 500;
	text-transform: uppercase;
	letter-spacing: 0.2em;
	color: #ffffff;
	background-color: #262b4e;
	cursor: pointer;
	outline: none;
}

.product-price-btn button:hover {
	background-color: #79b0a1;
}

.icon-placement{
	position: absolute;
	top: 25%;
	left: 25%;
	border-radius: 7px 0 0 7px;

	color: #ffffff;

	span{
		font-size: 75px;
		font-weight: 600;
	}
}

.card {
	margin: 10px;
}

